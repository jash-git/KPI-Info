jQuery(function($){$('#divRelated').append('<span class="load-more"></span>');var button=$('#divRelated .load-more');if(button.length){var page=2;var loading=false;var scrollHandling={allow:true,reallow:function(){scrollHandling.allow=true;},delay:10};$(window).scroll(function(){if(!loading&&scrollHandling.allow){scrollHandling.allow=false;setTimeout(scrollHandling.reallow,scrollHandling.delay);var offset=$(button).offset().top-$(window).scrollTop();if(2800>offset){loading=true;var data={action:'fm_ajax_load_more_related',nonce:fmloadmore.nonce,page:page,query:fmloadmore.query,post_id:post_id,};$.post(fmloadmore.url,data,function(res){if(res.success){$('#divRelated').append(res.data);$('#divRelated').append(button);page=page+1;loading=false;}else{}}).fail(function(xhr,textStatus,e){});}}});}});